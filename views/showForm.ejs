<!doctype html>
<html lang="en">

<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <h5>
      <%=isEdit ? "Update" : "Add Art" %>
   </h5>
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
   <div class="container">
      <h5>
         <%=action%>, <%=isEdit%>
      </h5>

      <form action="<%=action%>" method="post">

         <div class="mb-3">
            <label>Art Name
               <% if (error.name) { %>
                  <small class="text-danger ">
                     <%= error.name %>
                  </small>
                  <% } %>
            </label>
            <input type="text" class="form-control <%=error.name ? " is-invalid" : "" %>" name="name"
            value="<%=art.name || "" %>">
         </div>

         <div class="mb-3">
            <label>Artist Name
               <% if (error.artist) { %>
                  <small class="text-danger ">
                     <%= error.artist %>
                  </small>
                  <% } %>
            </label>
            <input type="text" class="form-control <%=error.artist ? " is-invalid" : "" %>" name="artist"
            value="<%=art.artist || "" %>">
         </div>

         <div class="mb-3">
            <label>Created date
               <% if (error.date) { %>
                  <small class="text-danger ms-2">
                     <%= error.date %>
                  </small>
                  <% } %>
            </label>
            <input type="date" class="form-control <%= error.date ? 'is-invalid' : '' %>" name="date"
               value="<%= art?.formatDate || '' %>">
         </div>

         <div class="mb-3">
            <label>Art Photo URL
               <% if (error.artist) { %>
                  <small class="text-danger ">
                     <%= error.artist %>
                  </small>
                  <% } %>
            </label>
            <input type="text" class="form-control <%=error.photo ? " is-invalid" : "" %>" name="photo"
            value="<%=art.artist || "" %>">
         </div>

         <div class="mb-3">
            <label>Art Origin
               <% if (error.artist) { %>
                  <small class="text-danger ">
                     <%= error.placeOfOrigin %>
                  </small>
                  <% } %>
            </label>
            <input type="text" class="form-control <%=error.placeOfOrigin ? " is-invalid" : "" %>" name="placeOfOrigin"
            value="<%=art.placeOfOrigin || "" %>">
         </div>

         <div class="mb-3">
            <label>Art Description
               <% if (error.description) { %>
                  <small class="text-danger ">
                     <%= error.description %>
                  </small>
                  <% } %>
            </label>
            <textarea class="form-control <%= error.description ? 'is-invalid' : '' %>"
               name="description"><%= art.description || '' %></textarea>
         </div>



         <button type="submit" class="btn btn-primary">
            <%=isEdit ? "Update" : "Add" %>
         </button>
      </form>

   </div>


   </tbody>
   </table>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"></script>
</body>

</html>